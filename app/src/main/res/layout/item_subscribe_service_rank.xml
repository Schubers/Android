<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    app:cardCornerRadius="8dp"
    android:layout_marginVertical="14dp"
    android:layout_marginHorizontal="30dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <View
            android:id="@+id/subscribe_rank_background_v"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/half_gl"/>

        <androidx.constraintlayout.widget.Guideline
            android:id="@+id/half_gl"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            app:layout_constraintGuide_percent="0.5"/>

        <androidx.appcompat.widget.AppCompatImageView
            android:id="@+id/subscribe_rank_imv"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="10dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintBottom_toTopOf="@id/half_gl"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/subscribe_rank_kinds_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:fontFamily="@font/nanumsquareregular"
            android:layout_marginTop="10dp"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@id/subscribe_rank_imv"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/subscribe_rank_name_tv"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/subscribe_rank_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:fontFamily="@font/nanumsquareextrabold"
            android:layout_marginBottom="10dp"
            android:layout_marginStart="6dp"
            app:layout_constraintStart_toEndOf="@id/subscribe_rank_imv"
            app:layout_constraintTop_toBottomOf="@id/subscribe_rank_kinds_tv"
            app:layout_constraintBottom_toBottomOf="@id/half_gl"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/subscribe_rank_value_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/colorWhite"
            android:textSize="14sp"
            android:fontFamily="@font/nanumsquarebold"
            android:layout_marginEnd="10dp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="@id/subscribe_rank_name_tv"
            app:layout_constraintBottom_toBottomOf="@id/subscribe_rank_name_tv"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/subscribe_rank_payment_subscribers_title_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_900"
            android:textSize="14sp"
            android:fontFamily="@font/nanumsquarebold"
            android:text="구독자 수"
            android:layout_marginStart="10dp"
            app:layout_constraintTop_toBottomOf="@id/half_gl"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/subscribe_rank_payment_subscribers_content_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/black_900"
            android:textSize="14sp"
            android:fontFamily="@font/nanumsquarebold"
            android:layout_marginEnd="10dp"
            app:layout_constraintTop_toBottomOf="@id/half_gl"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"/>

        <androidx.appcompat.widget.AppCompatTextView
            android:id="@+id/subscribe_rank_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="#1"
            android:textSize="14sp"
            android:textColor="@color/colorWhite"
            android:fontFamily="@font/nanumsquareextrabold"
            android:background="@drawable/rank_background"
            android:paddingTop="15dp"
            android:paddingStart="15dp"
            android:paddingBottom="10dp"
            android:paddingEnd="10dp"
            android:translationY="-5dp"
            android:translationX="-5dp"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>